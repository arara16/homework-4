
services:
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    ports:
      - "3000:80"
    container_name: homework-4-frontend
    restart: unless-stopped
    environment:
      - NODE_ENV=production
    networks:
      - crypto-network

  price-service:
    build:
      context: ./services/price_service
      dockerfile: Dockerfile
    ports:
      - "5001:5001"
    container_name: homework-4-price-service
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5001/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - crypto-network

  ta-service:
    build:
      context: ./services/ta_service
      dockerfile: Dockerfile
    ports:
      - "5002:5002"
    container_name: homework-4-ta-service
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5002/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - crypto-network

  prediction-service:
    build:
      context: ./services/prediction_service
      dockerfile: Dockerfile
    ports:
      - "5003:5003"
    container_name: homework-4-prediction-service
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5003/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - crypto-network

networks:
  crypto-network:
    driver: bridge

version: "3.9"
services:
  prediction-service:
    build: ./services/prediction_service
    container_name: homework-4-prediction-service
    ports:
      - "5003:5003"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5003/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
    environment:
      - FLASK_APP=app.py
      - FLASK_ENV=production

  price-service:
    build: ./services/price_service
    container_name: homework-4-price-service
    ports:
      - "5001:5001"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5001/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
    environment:
      - FLASK_APP=app.py
      - FLASK_ENV=production

  ta-service:
    build: ./services/ta_service
    container_name: homework-4-ta-service
    ports:
      - "5002:5002"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5002/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
    environment:
      - FLASK_APP=app.py
      - FLASK_ENV=production

  frontend:
    build: ./frontend
    container_name: homework-4-frontend
    ports:
      - "80:80"
    depends_on:
      - prediction-service
      - price-service
      - ta-service
