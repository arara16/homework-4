# Environment Configuration for CryptoVault
# Copy this file to .env and adjust values as needed

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
POSTGRES_USER=cryptovault
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=cryptovault_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================
# REDIS CACHE CONFIGURATION
# ============================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================
# SERVICE CONFIGURATION
# ============================================================
FLASK_ENV=production
SPRING_PROFILES_ACTIVE=docker
DEBUG=false

# ============================================================
# SERVICE PORTS
# ============================================================
API_GATEWAY_PORT=8080
PRICE_SERVICE_PORT=5001
TA_SERVICE_PORT=5002
PREDICTION_SERVICE_PORT=5003
FRONTEND_PORT=3000

# ============================================================
# SERVICE URLS (For inter-service communication)
# ============================================================
PRICE_SERVICE_URL=http://price-service:5001
TA_SERVICE_URL=http://ta-service:5002
PREDICTION_SERVICE_URL=http://prediction-service:5003
API_GATEWAY_URL=http://api-gateway:8080

# ============================================================
# FRONTEND CONFIGURATION
# ============================================================
REACT_APP_API_GATEWAY=http://localhost:8080/api
REACT_APP_FRONTEND_URL=http://localhost:3000
NODE_ENV=production

# ============================================================
# SECURITY CONFIGURATION
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
JWT_SECRET=your-secret-key-change-in-production-12345
ALLOWED_ORIGINS=*

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/application.log

# ============================================================
# MACHINE LEARNING CONFIGURATION
# ============================================================
MODEL_PATH=/app/models/lstm_model.h5
TENSORFLOW_AVAILABLE=true
PREDICTION_HORIZON=7
LOOKBACK_PERIOD=30

# ============================================================
# DATA CONFIGURATION
# ============================================================
DATA_PATH=/app/data
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# ============================================================
# MONITORING AND HEALTH CHECKS
# ============================================================
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================
# TIMEOUT CONFIGURATIONS (in seconds)
# ============================================================
REQUEST_TIMEOUT=30
SERVICE_CALL_TIMEOUT=5
DATABASE_TIMEOUT=10

# ============================================================
# EXTERNAL API CONFIGURATION
# ============================================================
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
COINGECKO_API_KEY=your_coingecko_api_key

# ============================================================
# FEATURE FLAGS
# ============================================================
ENABLE_CACHING=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
ENABLE_PREDICTION_SERVICE=true
